<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/navbar_background_color"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent">


    <ImageButton
        android:id="@+id/imageButtonMap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/navbar_background_color"
        android:contentDescription="Display contacts location"
        android:src="@drawable/maps" />

    <ImageButton
        android:id="@+id/imageButtonList"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/navbar_background_color"
        android:contentDescription="Display list of contacts"
        android:src="@drawable/viewlist" />

    <ImageButton
        android:id="@+id/imageButtonSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/navbar_background_color"
        android:contentDescription="Display settings"
        android:src="@drawable/settings" />
</LinearLayout>
